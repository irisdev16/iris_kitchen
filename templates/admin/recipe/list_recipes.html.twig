{% extends 'admin/base.html.twig' %}

{% block body %}

    <h1>Liste de toutes les recettes</h1>

    <table>
        <tr>
            <th style="border: 1px solid black; padding: 8px;">Id</th>
            <th style="border: 1px solid black; padding: 8px;">Nom</th>
            <th style="border: 1px solid black; padding: 8px;">Date de cr√©ation</th>
            <th style="border: 1px solid black; padding: 8px;">Image</th>
            <th style="border: 1px solid black; padding: 8px;">Actions</th>
        </tr>

        {% for recipe in recipes %}
            <tr>
                <td style="border: 1px solid black; padding: 8px;">{{ recipe.id }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ recipe.title }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ recipe.createdAt | date('d-m-Y')}}</td>
                <td style="border: 1px solid black; padding: 8px;">
                    <img width="100px" src="{{ asset('assets/uploads/' ~ recipe.image) }}" />
                </td>
                <td style="border: 1px solid black; padding: 8px;">
                    <a href="{{ path('admin_delete_recipe', {'id': recipe.id}) }}">Supprimer</a>
                    <a href="{{ path('admin_update_recipe', {'id': recipe.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock body %}