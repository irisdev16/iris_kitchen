{% extends 'admin/base.html.twig' %}

{% block body %}

    <h1>Liste de toutes les recettes</h1>

    <table>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Date de cr√©ation</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>

        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.createdAt | date('d-m-Y')}}</td>
                <td><img width="100px" src="{{ asset('assets/uploads/' ~ recipe.image) }}" /></td>
                <td><a href="{{ path('admin_delete_recipe', {'id': recipe.id}) }}">Supprimer</a><a href="{{ path('admin_update_recipe', {'id': recipe.id}) }}">Modifier</a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock body %}