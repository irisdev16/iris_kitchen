{% extends 'admin/base.html.twig' %}

{% block title %}Hello RecipeController!{% endblock %}

{% block body %}


<section class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">

        <article>
            <h2> {{ recipe.title }}</h2>
            <img src="{{ asset ('assets/images/' ~ recipe.image) }}">
            <p><a href="{{ path('admin_delete_recipe', {'id':recipe.id}) }}" class="btn btn-primary mt-3">Supprimer</a></p>
            <p><a href="{{ path('admin_update_recipe', {'id':recipe.id}) }}" class="btn btn-primary mt-3">Modifier</a></p>
        </article>
    </div>

{% endblock %}