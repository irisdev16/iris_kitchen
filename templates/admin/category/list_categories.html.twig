{% extends 'admin/base.html.twig' %}

{% block body %}

    <h1>Liste de toutes les catégories</h1>

    <table>
        <tr>
            <th style="border: 1px solid black; padding: 8px;">Id</th>
            <th style="border: 1px solid black; padding: 8px;">Titre de la catégorie</th>

        </tr>

        {% for category in categories %}
            <tr>
                <td style="border: 1px solid black; padding: 8px;">{{ category.id }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ category.title }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ category.createdAt | date('d-m-Y')}}</td>
                <td><a href="{{ path('admin_delete_category', {'id': category.id}) }}">Supprimer</a>
                    <a href="{{ path('admin_update_category', {'id': category.id}) }}">Modifier</a></td>

            </tr>
        {% endfor %}
    </table>

{% endblock body %}